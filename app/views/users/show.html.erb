<h1>タスクリスト一覧</h1>

<% if @tasks.any? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>task_id</th>
        <th>タスク</th>
        <th>ステータス</th>
      </tr>
    </thead>
    
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <div>
    <%= paginate @tasks %>
  </div>
  
<% end %>

<%= link_to 'タスクの登録', new_task_path, class: "btn btn-success" %>
  
</div>